generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  habits    Habit[]
  createdAt DateTime @default(now())
}

model Habit {
  id        String   @id @default(cuid())
  name      String
  emoji     String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
